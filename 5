    // Rectangle Drawing
    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {
        Graphics g1 = jPanel1.getGraphics();
        Graphics2D g2 = (Graphics2D) g1;
        g2.setPaint(Color.ORANGE);
        double leftx = 100;
        double topy = 100;
        double width = 100;
        double height = 200; // For Square, width and height should be the same
        Rectangle2D rect = new Rectangle2D.Double(leftx, topy, width, height);
        g2.fill(rect);
    }

    // Ellipse Drawing
    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {
        Graphics g1 = jPanel1.getGraphics();
        Graphics2D g2 = (Graphics2D) g1;
        g2.setPaint(Color.CYAN);
        double leftx = 300;
        double topy = 100;
        double width = 30;
        double height = 40; // For Circle, width and height should be the same
        Ellipse2D ellipse = new Ellipse2D.Double(leftx, topy, width, height);
        g2.fill(ellipse);
    }

    // Line Drawing
    private void jButton4ActionPerformed(java.awt.event.ActionEvent evt) {
        Graphics g1 = jPanel1.getGraphics();
        Graphics2D g2 = (Graphics2D) g1;
        g2.setPaint(Color.MAGENTA);
        double startx = 50;
        double starty = 60;
        double endx = 600;
        double endy = 600;
        Line2D line = new Line2D.Double(startx, starty, endx, endy);
        g2.draw(line);
    }

